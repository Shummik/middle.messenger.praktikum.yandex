.button {
    border-radius: 8px;
    padding: 12px 0 12px;
    background-color: var(--color-button-Primary);
    color: var(--color-text-DarkBg);
    border: none;
    width: 100%;

    &:hover {
        opacity: 0.8;
        cursor: pointer;
        transition: 0.3s ease-in;
    }

    &:active {
        transform: scale(0.97);
    }
}
